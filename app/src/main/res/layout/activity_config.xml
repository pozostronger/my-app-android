<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Título -->
    <TextView
        android:text="Configuración Interna"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Notificaciones -->
    <Switch
        android:id="@+id/swNotificaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notificaciones"
        android:layout_marginTop="24dp" />

    <!-- Modo Oscuro -->
    <Switch
        android:id="@+id/swModoOscuro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modo Oscuro"
        android:layout_marginTop="24dp" />

    <!-- Sonido -->
    <Switch
        android:id="@+id/swSonido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sonido"
        android:layout_marginTop="24dp" />

    <!-- Idioma -->
    <TextView
        android:text="Idioma"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"/>
    <Spinner
        android:id="@+id/spinnerIdioma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>

    <!-- Tamaño de Fuente -->
    <TextView
        android:text="Tamaño de Fuente"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"/>
    <SeekBar
        android:id="@+id/seekBarFontSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="30"
        android:min="12"
        android:progress="18"
        android:layout_marginTop="8dp"/>

    <!-- Borrar Datos -->
    <Button
        android:id="@+id/btnBorrarDatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Borrar Datos"
        android:layout_marginTop="24dp" />

    <!-- Configuración de Privacidad -->
    <TextView
        android:text="Configuración de Privacidad"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"/>
    <Switch
        android:id="@+id/swHistorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Historial de Actividad"
        android:layout_marginTop="8dp" />

    <!-- Ver Licencia -->
    <Button
        android:id="@+id/btnLicencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Términos y Condiciones"
        android:layout_marginTop="24dp" />

    <!-- Actualizaciones Automáticas -->
    <Switch
        android:id="@+id/swActualizaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizaciones Automáticas"
        android:layout_marginTop="24dp" />

    <!-- Botón Volver -->
    <Button
        android:id="@+id/btnVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:layout_marginTop="24dp"
        android:onClick="onVolverClick" />

</LinearLayout>
