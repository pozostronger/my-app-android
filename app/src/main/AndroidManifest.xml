<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.SEND_SMS" /> <!-- Permiso para enviar SMS -->

    <!-- Declarar que el dispositivo puede o no tener flash -->
    <uses-feature
        android:name="android.hardware.camera.flash"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.App">

        <!-- CÃ¡mara -->
        <activity
            android:name=".CamaraActivity"
            android:exported="false" />

        <!-- Perfil -->
        <activity
            android:name=".PerfilActivity"
            android:exported="false" />

        <!-- Pantalla principal -->
        <activity
            android:name=".HomeActivity"
            android:exported="false" />

        <!-- Nueva pantalla de SMS -->
        <activity
            android:name=".EnviarSMSActivity"
            android:exported="false" />

        <!-- Detalle alumno -->
        <activity
            android:name=".DetalleActivity"
            android:exported="false" />

        <!-- Login (actividad inicial) -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Map Activity -->
        <activity
            android:name=".MapActivity"
            android:exported="false" />

        <!-- Config Activity -->
        <activity
            android:name=".ConfigActivity"
            android:exported="false" />

        <!-- Permiso para acceder a archivos -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/ruta_archivo" />
        </provider>
    </application>

</manifest>
